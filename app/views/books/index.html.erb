<h1>Books</h1>

<% @books.each do |book| %>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>
  
  <tbody>
    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <td><%= link_to "Show", "/books/#{book.id}" %></td>
    <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
    <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
  </tbody>
</table>
<% end  %>



<%= form_with model: @book, url: '/books', method: :post  do |f| %>

  <h2>New book</h2>

  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

