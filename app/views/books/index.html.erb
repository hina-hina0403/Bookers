<h1>Books</h1>
<% @books.each do |book| %>

<table>
  <th>Title</th>
  <th>Body</th>
    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <td><%= link_to "Show", "/books/#{book.id}" %></td>
    <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
    <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>

</table>

<% end  %>



<%= form_with model: @book, url: '/books', method: :post  do |f| %>

  <h2>New book</h2>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

